{
  "name": "hierarchical-convert",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/hierarchical-convert/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/hierarchical-convert",
        "tsConfig": "packages/hierarchical-convert/tsconfig.lib.json",
        "packageJson": "packages/hierarchical-convert/package.json",
        "main": "packages/hierarchical-convert/src/index.ts",
        "assets": ["packages/hierarchical-convert/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs hierarchical-convert {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/hierarchical-convert/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/hierarchical-convert/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
